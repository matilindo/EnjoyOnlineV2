<MudCard>
    <MudCardContent>
        <MudImage Src="@url" Alt="" Elevation="25" Class="rounded-lg" />

        <MudText Typo=Typo.h6>@Money</MudText>
        <MudText Typo=Typo.subtitle2 >Compra:</MudText>
        <MudText Typo="Typo.body2">37,6:</MudText>
        <MudDivider />
        <MudText Typo=Typo.subtitle2>Venta:</MudText>
        <MudText Typo="Typo.body2">40,5:</MudText>
    </MudCardContent>
   
</MudCard>

@code {
    [Parameter]
    public string Money { get; set; }

    [Parameter]
    public string Imagen { get; set; }

    private string url;

    protected override void OnInitialized()
    {
        url = $"/images/{Imagen}";   
    }

    
}
